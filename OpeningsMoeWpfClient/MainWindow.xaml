<Window
    x:Class="OpeningsMoeWpfClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpeningsMoeWpfClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="https://github.com/JohanLarsson/Gu.Wpf.Media"
    Title="{Binding CurrentlyPlaying}"
    Width="525"
    Height="350"
    Closed="OnClosed"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <media:MediaElementWrapper
            x:Name="OpeningPlayer"
            Grid.Row="0"
            Grid.Column="0"
            MediaEnded="OnVideoFinishedPlaying"
            Stretch="Uniform" />
        <Slider
            Grid.Row="0"
            Grid.Column="1"
            LargeChange="0.1"
            Maximum="1"
            Minimum="0"
            Orientation="Vertical"
            Value="{Binding ElementName=OpeningPlayer, Path=Volume}" />
    </Grid>
</Window>
