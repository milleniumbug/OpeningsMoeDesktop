<Window x:Class="OpeningsMoeWpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpeningsMoeWpfClient"
        mc:Ignorable="d"
        Title="{Binding CurrentlyPlaying}" Height="350" Width="525"
        Loaded="OnLoaded">
    <Grid>
        <MediaElement x:Name="OpeningPlayer" MediaEnded="OnVideoFinishedPlaying" Stretch="Uniform"/>
    </Grid>
</Window>
