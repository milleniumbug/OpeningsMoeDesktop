<Window
    x:Class="OpeningsMoeWpfClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpeningsMoeWpfClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding CurrentlyPlaying}"
    Width="525"
    Height="350"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <MediaElement
            x:Name="OpeningPlayer"
            Grid.Column="0"
            LoadedBehavior="Manual"
            MediaEnded="OnVideoFinishedPlaying"
            Stretch="Uniform"
            UnloadedBehavior="Manual" />
        <Slider
            Grid.Column="1"
            Maximum="1"
            Minimum="0"
            Orientation="Vertical"
            Value="{Binding ElementName=OpeningPlayer, Path=Volume}" />
    </Grid>
</Window>
